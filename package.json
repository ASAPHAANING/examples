{
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "spec": "jest .",
    "test": "yarn lint && yarn spec"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-bliss": "^4.6.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7"
  },
  "workspaces": {
    "packages": ["./*"],
    "nohoist": ["electron-app/@amilajack/neon-hello", "**/neon-cli"]
  },
  "eslintConfig": {
    "extends": "bliss",
    "rules": {
      "flowtype-errors/show-errors": "off",
      "no-new": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
